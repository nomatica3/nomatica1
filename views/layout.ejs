<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <!--<title><%= title %>| Colorful Moves</title>-->
  <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      padding-left: 220px;
      min-height: 100vh;
    }
    #sidebarMenu.hidden {
      margin-left: -240px;
    }
    .main-content {
      transition: margin-left 0.3s;
    }
    .brand-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
    }
    .brand-subtitle {
      font-size: 0.9rem;
      color: #555;
      margin-top: -4px;
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">

  <!-- Header / Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top shadow-sm mb-auto py-3">
    <div class="container-fluid d-flex justify-content-between align-items-center px-4">

      <!-- Sidebar Toggle Left -->
      <button id="sidebarToggle" class="btn btn-outline-secondary me-2">‚ò∞</button>

      <!-- Center Brand + Subtitle -->
      <div class="brand-container mx-auto">
        <a class="navbar-brand fw-bold" href="/" style="font-size: 1.4rem;">Colorful Moves</a>
      </div>

      <!-- Dropdown Menu Right -->
      <div class="dropdown">
        <button class="btn" id="mainDropdown" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi bi-three-dots"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="mainDropdown">
          <li><a class="dropdown-item" href="/vendor-portal">Vendor Portal</a></li>
          <li><a class="dropdown-item" href="/admin-portal">Admin Portal</a></li>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item text-danger" href="#">Log Out</a></li>
        </ul>
      </div>

    </div>
  </nav>

  <!-- Sidebar -->
  <nav id="sidebarMenu" class="bg-light border-end position-fixed h-100 p-3" style="width:220px; top:56px; left:0; transition:margin 0.3s;">
    <ul class="nav flex-column mt-4">
      <li class="nav-item"><a class="nav-link" href="/new-chat">üìù New Chat</a></li>
      <li class="nav-item"><a class="nav-link" href="/explore">üåê Explore</a></li>
      <li class="nav-item"><a class="nav-link" href="/settings">‚öôÔ∏è Settings</a></li>
      <li class="nav-item"><a class="nav-link" href="/help">‚ùì Help</a></li>
    </ul>
  </nav>

  <!-- Main Content -->
  <main class="main-content p-4 mt-5 flex-fill d-flex align-items-center justify-content-center">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="footer w-100 text-center mt-auto py-3 bg-light border-top">
    <div class="container-fluid d-flex justify-content-between align-items-center px-4">
      <span class="text-muted">&copy; 2025 Colorful Moves. All rights reserved.</span>
      <span>
        <a href="/privacy" class="text-muted me-2">Privacy Policy</a> <!--|>
        <!--a href="/terms" class="text-muted ms-2">Terms of Service</a-->
      </span>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const sidebar = document.getElementById('sidebarMenu');
      const toggleBtn = document.getElementById('sidebarToggle');
      if (toggleBtn && sidebar) {
        toggleBtn.addEventListener('click', () => {
          sidebar.classList.toggle('hidden');
          document.body.style.paddingLeft = sidebar.classList.contains('hidden') ? '0' : '220px';
        });
      }
    });
  </script>
  <script src="/script.js"></script>
</body>
</html>
