<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title %> | Colorful Moves</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      min-height: 100vh;
      transition: padding-left 0.3s;
      padding-left: 220px;
    }

    #sidebarWrapper {
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      width: 220px;
      background-color: #f8f9fa;
      border-right: 1px solid #dee2e6;
      transition: margin-left 0.3s;
      z-index: 1040;
    }

    #sidebarWrapper.hidden {
      margin-left: -240px;
    }

    .sidebar-header, .sidebar-footer {
      padding: 1rem;
      border-bottom: 1px solid #ddd;
      background-color: #fff;
    }

    .sidebar-footer {
      border-top: 1px solid #ddd;
      border-bottom: none;
      position: absolute;
      bottom: 0;
      width: 100%;
    }

    .main-content {
      transition: margin-left 0.3s;
      padding: 2rem;
      margin-top: 56px;
    }

    #sidebarToggle {
      position: fixed;
      top: 10px;
      left: 10px;
      z-index: 1050;
    }

    @media (max-width: 991.98px) {
      body {
        padding-left: 0;
      }
      #sidebarWrapper {
        transform: translateX(-100%);
      }
      #sidebarWrapper.show {
        transform: translateX(0);
      }
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">

  <!-- Sidebar Toggle -->
  <button id="sidebarToggle" class="btn btn-outline-secondary">‚ò∞</button>

  <!-- Sidebar -->
  <div id="sidebarWrapper">
    
    <!-- Sidebar Header -->
    <div class="sidebar-header d-flex justify-content-between align-items-center">
      <div>
        <a class="navbar-brand fw-bold mb-0" href="/" style="font-size: 1.4rem;">Colorful Moves</a><br>
        <small class="text-muted">Contract Automation</small>
      </div>
      <div class="dropdown">
        <button class="btn btn-sm" id="mainDropdown" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi bi-three-dots"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="mainDropdown">
          <li><a class="dropdown-item" href="/vendor-portal">Vendor Portal</a></li>
          <li><a class="dropdown-item" href="/admin-portal">Admin Portal</a></li>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item text-danger" href="#">Log Out</a></li>
        </ul>
      </div>
    </div>

    <!-- Sidebar Menu -->
    <nav class="p-3">
      <ul class="nav flex-column mt-2">
        <li class="nav-item"><a class="nav-link" href="/new-chat">üìù New Chat</a></li>
        <li class="nav-item"><a class="nav-link" href="/explore">üåê Explore</a></li>
        <li class="nav-item"><a class="nav-link" href="/settings">‚öôÔ∏è Settings</a></li>
        <li class="nav-item"><a class="nav-link" href="/help">‚ùì Help</a></li>
      </ul>
    </nav>

    <!-- Sidebar Footer -->
    <footer class="sidebar-footer text-center">
      <small class="text-muted">&copy; 2025 Colorful Moves</small><br>
      <a href="/privacy" class="text-muted me-2">Privacy</a> |
      <a href="/terms" class="text-muted ms-2">Terms</a>
    </footer>
  </div>

  <!-- Main Content -->
  <main class="main-content flex-fill">
    <%- body %>
  </main>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const sidebar = document.getElementById('sidebarWrapper');
      const toggleBtn = document.getElementById('sidebarToggle');

      // Start hidden by default
      sidebar.classList.add('hidden');
      document.body.style.paddingLeft = '0';

      toggleBtn.addEventListener('click', () => {
        const isHidden = sidebar.classList.toggle('hidden');
        document.body.style.paddingLeft = isHidden ? '0' : '220px';
      });

      window.addEventListener('resize', () => {
        if (window.innerWidth < 992) {
          sidebar.classList.add('hidden');
          document.body.style.paddingLeft = '0';
        }
      });
    });
  </script>
</body>
</html>
