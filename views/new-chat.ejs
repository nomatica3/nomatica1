<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>Chat with <%= modelName %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .chat-container { max-height: 500px; overflow-y: auto; border: 1px solid #ddd; padding: 15px; background: #f9f9f9; border-radius: 8px; }
    .message { margin: 10px 0; padding: 10px; border-radius: 5px; }
    .user { background-color: #d4edda; text-align: right; }
    .assistant { background-color: #e9ecef; text-align: left; }
    .input-group { margin-top: 15px; }
  </style>
</head>
<body>
<div class="container py-4">
  <h1 class="text-center">Chat with <%= modelName %></h1>
  <p class="text-center">
    <a href="/models" class="btn btn-link">Back to Model List</a>
    <a href="/" class="btn btn-link">Back to Home</a>
  </p>

  <div class="chat-container mx-auto" style="max-width: 700px;">
    <div id="chatBox"></div>
    <div class="input-group">
      <input
        type="text"
        id="chatInput"
        class="form-control"
        placeholder="Ask <%= modelName %> a question..."
        aria-label="Chat input"
      />
      <button class="btn btn-primary" onclick="sendMessage()">Send</button>
    </div>
  </div>
</div>

<script>
  const chatLog = [];

  async function sendMessage() {
    const userInput = document.getElementById('chatInput').value.trim();
    if (!userInput) return;

    chatLog.push({ role: 'user', content: userInput });
    updateChatUI(userInput, 'user');
    document.getElementById('chatInput').value = '';

    try {
      const response = await fetch('/api/chat/<%= modelRoute %>', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ messages: chatLog })
      });
      const data = await response.json();
      chatLog.push({ role: 'assistant', content: data.reply });
      updateChatUI(data.reply, 'assistant');
    } catch (err) {
      console.error('Chat error:', err);
      updateChatUI('Error: Unable to contact the AI model.', 'assistant');
    }
  }

  function updateChatUI(message, role) {
    const chatBox = document.getElementById('chatBox');
    const msgEl = document.createElement('div');
    msgEl.className = `message ${role}`;
    msgEl.textContent = message;
    chatBox.appendChild(msgEl);
    chatBox.scrollTop = chatBox.scrollHeight;
  }
</script>
</body>
</html>