<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Ollama Model Loader</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container py-5">
<h1 class="mb-4 text-center">Ollama Model Loader</h1>

<form id="loadForm" class="mb-4">
<div class="mb-3">
<label for="modelSelect" class="form-label">Select a model:</label>
<select class="form-select" id="modelSelect" name="model">
<option value="">-- Choose a model --</option>
<option value="llama2">LLaMA2</option>
<option value="gemma">Gemma</option>
<option value="phi4">Phi4</option>
<option value="mistral">Mistral</option>
<option value="bard">Bard</option>
<!-- Add all your models here -->
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Load Model</button>
    </form>

    <form id="loadAllForm">
        <button type="submit" class="btn btn-success">Load All Models</button>
    </form>

    <div id="status" class="mt-4"></div>
</div>

<script>
const loadForm = document.getElementById('loadForm');
const loadAllForm = document.getElementById('loadAllForm');
const statusDiv = document.getElementById('status');

loadForm.addEventListener('submit', e => {
    e.preventDefault();
    const model = document.getElementById('modelSelect').value;
    if (!model) return alert("Select a model first");

    fetch('/load', {
        method: 'POST',
        headers: {'Content-Type': 'application/x-www-form-urlencoded'},
        body: `model=${model}`
    })
    .then(res => res.text())
.then(text => statusDiv.innerText = text)
.catch(err => statusDiv.innerText = err);
});

loadAllForm.addEventListener('submit', e => {
e.preventDefault();
fetch('/load-all', { method: 'POST' })
.then(res => res.text())
.then(text => statusDiv.innerText = text)
.catch(err => statusDiv.innerText = err);
});
</script>
</body>
</html>