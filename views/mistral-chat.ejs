<h2>Chat with Mistral AI</h2>
<form id="mistralForm">
  <input type="text" name="prompt" placeholder="Ask anything...">
  <button type="submit">Send</button>
</form>
<div id="mistralResponse"></div>

<script>
  document.getElementById("mistralForm").addEventListener("submit", async (e) => {
    e.preventDefault();
    const prompt = e.target.prompt.value;
    const res = await fetch("/chat/mistral", {
      method: "POST",
      body: JSON.stringify({ prompt }),
      headers: { "Content-Type": "application/json" }
    });
    const data = await res.json();
    document.getElementById("mistralResponse").innerText = data.response;
  });
</script>
