<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>Custom AI Automations</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .chat-message.user { text-align: right; color: blue; margin: 5px 0; }
    .chat-message.assistant { text-align: left; color: green; margin: 5px 0; }
    #chatBox {
      height: 300px;
      overflow-y: auto;
      border: 1px solid #ddd;
      padding: 10px;
      border-radius: 6px;
      background: #fafafa;
    }
  </style>
</head>
<body>

<div class="container py-4 text-center">
  <h1>Custom AI Automations</h1>

  <div id="chatBox" class="mt-4 mx-auto" style="max-width:500px;"></div>

  <div class="chat-box mt-3 mx-auto" style="max-width:500px;">
    <input
      type="text"
      id="chatInput"
      class="form-control"
      placeholder="Ask or Customize Anything..."
    />
    <button class="btn btn-primary mt-2 w-100" onclick="sendMessage()">Send</button>
  </div>
</div>

<script>
  const chatLog = [];

  async function sendMessage() {
    const userInput = document.getElementById("chatInput").value.trim();
    if (!userInput) return;

    // Add user message to UI & log
    chatLog.push({ role: "user", content: userInput });
    updateChatUI(userInput, "user");
    document.getElementById("chatInput").value = "";

    // Display loading
    updateChatUI("Thinking...", "assistant");

    try {
      const response = await fetch("/api/openai", {   // <--- FIXED unified endpoint
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ messages: chatLog })
      });

      const data = await response.json();

      // Remove "Thinking..." placeholder
      removeLastAssistantMessage();

      // Add real response
      const reply = data.response || "No response.";
      chatLog.push({ role: "assistant", content: reply });
      updateChatUI(reply, "assistant");

    } catch (err) {
      console.error("Chat error:", err);
      updateChatUI("Error contacting AI.", "assistant");
    }
  }

  function updateChatUI(message, role) {
    const chatBox = document.getElementById("chatBox");
    const msg = document.createElement("div");
    msg.className = `chat-message ${role}`;
    msg.textContent = message;
    chatBox.appendChild(msg);
    chatBox.scrollTop = chatBox.scrollHeight;
  }

  function removeLastAssistantMessage() {
    const chatBox = document.getElementById("chatBox");
    const messages = chatBox.getElementsByClassName("assistant");
    if (messages.length > 0) {
      chatBox.removeChild(messages[messages.length - 1]);
    }
  }
</script>

</body>
</html>
